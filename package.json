{
  "name": "zaptunnel",
  "version": "1.0.0",
  "description": "A CLI tool that instantly shares files by generating temporary public URLs using Cloudflare Tunnel",
  "main": "dist/cli.js",
  "bin": {
    "zaptunnel": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/cli.js",
    "prepare": "npm run build",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "file-sharing",
    "cli",
    "cloudflare",
    "tunnel"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "chalk": "^4.1.2",
    "cli-progress": "^3.12.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "ora": "^5.4.1",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cli-progress": "^3.11.5",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^4.0.17",
    "supertest": "^7.2.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
